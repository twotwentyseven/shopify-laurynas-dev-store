{% assign word_count = article.content | strip_html | split: ' ' | size %}
{% assign reading_time = word_count | divided_by: 180.0 | round %}

{% if reading_time <= 1 %}
  {% assign reading_time = 1 | append: ' min read' %}
{% else %}
  {% assign reading_time = reading_time | append: ' min read' %}
{% endif %}

<div class="article-card | {{ settings.ac_bg_color}}-{{ settings.ac_bg_color_shade }} {{ settings.ac_text_color }}-{{ settings.ac_text_color_shade }}">
    
    {% render 'responsive-image' with image: article.image, image_class: '', wrapper_class: '' %}

    <div class="article-data | p-4">
        <p class="publish | text-body-small mb-4 | lg:text-body-small-lg ">{{ article.published_at | date: '%B %Y' }}</p>
        <h4 class="title font-headline font-semibold mb-2 text-headline-5 lg:text-headline-5-lg">{{ article.title }}</h4>
        <div class="excerpt | text-body-large mb-4 | lg:text-body-large-lg">{{ article.excerpt_or_content | strip_html | truncatewords: 35 }}</div>
        <p class="read-time | text-body-small mb-4 flex items-center | lg:text-body-small-lg"><span class="material-symbols-outlined mr-2">schedule</span> {{ reading_time }}</p>
        {% render 'button' element: 'a', data: '', href: article.url, border_color: settings.ac_btn_color, border_width: 'border', bg_color: settings.ac_btn_color, bg_color_shade: settings.ac_btn_color_shade, text_color: settings.ac_btn_text_color, text_color_shade: settings.ac_btn_text_color_shade, hover_bg: settings.ac_btn_hover_color, hover_bg_shade: settings.ac_btn_hover_color_shade, hover_text: settings.ac_btn_hover_text_color, hover_text_shade: settings.ac_btn_hover_text_color_shade, content: settings.ac_read_more, custom_class: '!inline-flex !p-0', before_icon: 'arrow_forward', after_icon: '' %}
    </div>
</div>