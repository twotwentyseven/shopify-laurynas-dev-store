{% assign ss = section.settings %}

<section
    class="two-column-usps-card | relative w-full flex flex-wrap | lg:items-stretch lg:flex-nowrap  pb-16 | lg:pb-0 {{ ss.text-align }} {{ ss.bg_color }}-{{ ss.bg_color_shade }}">

    <div
        class="column | mx-container-gutter w-full order-2 px-4 py-10 | lg:px-10 lg:order-2 lg:mx-0 lg:my-container-gutter-lg lg:basis-1/2 lg:flex-grow | {% if ss.image_align_mob == 'order-1' %}rounded-b-2xl {% else %}rounded-t-2xl{% endif %} | {% if ss.image_align == 'order-1' %}lg:mr-container-gutter-lg lg:rounded-r-2xl lg:rounded-l-none {% else %}lg:ml-container-gutter-lg lg:rounded-l-2xl lg:rounded-r-none{% endif %} {{ ss.copy_bg_color }}-{{ ss.copy_bg_color_shade }}">

        {% if ss.title != blank %}
            <h2
                style="word-break: break-word;" class="title | mb-4 lg:mb-10 | break-words {{ ss.title_typeface }} {{ ss.title_weight }} {{ ss.title_color }}-{{ ss.title_color_shade }} {{ ss.title_size }}">
                {{ ss.title }}
            </h2>
        {% endif %}

        {% if ss.subtitle != blank %}
            <div
                class="content | mb-4 | lg:mb-10 | {{ ss.subtitle_typeface }} {{ ss.subtitle_size }} {{ ss.subtitle_weight }} {{ ss.subtitle_color }}-{{ ss.subtitle_color_shade }}">
                {{ ss.subtitle | newline_to_br }}
            </div>
        {% endif %}

        {% for block in section.blocks %}
            <div
                class="mb-6 flex items-center ">
                {% assign bs = block.settings %}

                {% if bs.image != blank %}

                    {% render 'responsive-image' with image: bs.image, image_class: 'image object-contain w-full', wrapper_class: 'image-wrapper w-8 h-8 flex-shrink mr-2' %}

                {% endif %}
                <div
                    class="w-full">
                    {% if bs.title != blank %}
                        <h3
                            class="title | {%if bs.content != blank %} mb-2 {% endif %} {{ bs.title_typeface }} {{ bs.title_weight }} {{ bs.title_color }}-{{ bs.title_color_shade }} {{ bs.title_size }}">
                            {{ bs.title }}
                        </h3>
                    {% endif %}

                    {% if bs.content != blank %}
                        <div
                            class="content | {{ bs.content_typeface }} {{ bs.content_weight }} {{ bs.content_size }} {{ bs.content_color }}-{{ bs.content_color_shade }}">
                            {{ bs.content }}
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}

        <div
            class="btn-wrapper | -mx-gutter flex {{ ss.text-align }} {{ ss.button-alignment-mob }} | {{ ss.button-alignment }}">

            {% if ss.btn_url != blank %}
                {% render 'button' element: 'a', type: '', href: ss.btn_url, target: '', border_color: ss.btn_border_color, border_color_shade: ss.btn_border_color_shade, border_width: 'border', bg_color: ss.btn_color, bg_color_shade: ss.btn_color_shade, text_color: ss.btn_text_color, text_color_shade: ss.btn_text_color_shade, hover_bg: ss.btn_hover_color, hover_bg_shade: ss.btn_hover_color_shade, hover_border_color: ss.btn_hover_border_color, hover_border_color_shade: ss.btn_border_hover_color_shade, hover_text: ss.btn_hover_text_color, hover_text_shade: ss.btn_hover_text_color_shade, content: ss.btn_text, custom_class: 'mx-gutter font-headline', before_icon: '', after_icon: '' %}
            {% endif %}

            {% if ss.alt_btn_url != blank %}
                {% render 'button' element: 'a', type: '', href: ss.alt_btn_url, target: '', border_color: ss.alt_btn_border_color, border_color_shade: ss.alt_btn_border_color_shade, border_width: 'border', bg_color: ss.alt_btn_color, text_color: ss.alt_btn_text_color, text_color_shade: ss.alt_btn_text_color_shade, hover_bg: ss.alt_btn_hover_color, hover_bg_shade: ss.alt_btn_hover_color_shade, hover_border_color: ss.alt_btn_hover_border_color, hover_border_color_shade: ss.alt_btn_border_hover_color_shade, hover_text: ss.alt_btn_hover_text_color, hover_text_shade: ss._alt_btn_hover_text_color_shade content: ss.alt_btn_text, custom_class: 'mx-gutter font-headline', before_icon: '', after_icon: '' %}
            {% endif %}

        </div>

    </div>

    <div
        class="column | {{ ss.image_align_mob }} w-full p-container-gutter | lg:px-0 lg:{{ ss.image_align }} lg:basis-2/5 lg:py-container-gutter-lg | {% if ss.image_align_mob == 'order-1' %}pt-container-gutter pb-0{% else %}pb-container-gutter pt-0{% endif %} {% if ss.image_align == 'order-1' %}lg:pl-container-gutter-lg{% else %}lg:pr-container-gutter-lg{% endif %}">
        {% if ss.image != blank %}

            {% capture alignment %}
                {% if ss.image_align_mob == 'order-1' %}
                    rounded-t-2xl
                {% else %}
                    rounded-b-2xl
                {% endif %}
                {% if ss.image_align == 'order-1' %}
                    lg:rounded-l-2xl lg:rounded-r-none
                {% else %}
                    lg:rounded-r-2xl lg:rounded-l-none
                {% endif %}
            {% endcapture %}

            {% assign image_classes = 'image h-full w-full object-cover  absolute top-0 left-0 ' | append: alignment %}
            {% render 'responsive-image' with image: ss.image, mobile_image: ss.image_mob, image_class: image_classes, wrapper_class: 'image-wrapper relative w-full h-full pt-[400px] lg:pt-[550px]' %}

        {% endif %}

    </div>

</section>


