{% assign ss = section.settings %}

<section
    class="spotlight-carousel | items-center flex flex-wrap relative w-full pl-container-gutter py-16 | lg:py-20 lg:pl-container-gutter-lg | {{ ss.text-align }} {{ ss.bg_color }}-{{ss.bg_color_shade}}">

    <div
        class="w-full mb-8 pr-container-gutter | lg:mb-0 lg:w-1/3 lg:pr-10">

        {% if ss.title_image != blank %}

            {% render 'responsive-image' with image: ss.title_image, image_class: 'image object-cover w-full mx-auto max-w-[400px]', wrapper_class: 'image-wrapper mb-10' %}

        {% elsif ss.title != blank or ss.curved_title != blank %}
            <svg
                viewBox="0 0 600 {{ ss.curved_title | size | times:12 | plus: 16 }}">
                <path
                    id="curve"
                    d="M195,163 C253,21 344,20 400,161"
                    fill="transparent" />
                <text
                    width="500"
                    class="{{ ss.curved_title_color }}">
                    <textPath
                        xlink:href="#curve"
                        startOffset="50%"
                        text-anchor="middle"
                        class="font-headline text-headline-1 ">
                        {{ ss.curved_title }}
                    </textPath>
                </text>
            </svg>

            <h2
                class="title | mb-4 |  {{ ss.title_typeface }} {{ ss.title_weight }} {{ ss.title_color }}-{{ ss.title_color_shade }} {{ ss.title_size }} lg:{{ ss.title_size }}">
                {{ ss.title | newline_to_br }}
            </h2>

        {% endif %}

        {% if ss.subtitle != blank %}
            <div
                class="content | mb-4 | {{ ss.subtitle_typeface }} {{ ss.subtitle_color }}-{{ ss.subtitle_color_shade }} {{ ss.subtitle_size }} lg:{{ ss.subtitle_size }}">
                {{ ss.subtitle }}
            </div>
        {% endif %}

        <div
            class="btn-wrapper | -mx-gutter flex {{ ss.text-align }}">

            {% if ss.btn_url != blank %}
                {% render 'button' element: 'a', type: '', href: ss.btn_url, target: '', border_color: ss.btn_border_color, border_color_shade: ss.btn_border_color_shade, border_width: 'border', bg_color: ss.btn_color, bg_color_shade: ss.btn_color_shade, text_color: ss.btn_text_color, text_color_shade: ss.btn_text_color_shade, hover_bg: ss.btn_hover_color, hover_bg_shade: ss.btn_hover_color_shade, hover_border_color: ss.btn_hover_border_color, hover_border_color_shade: ss.btn_border_hover_color_shade, hover_text: ss.btn_hover_text_color, hover_text_shade: ss.btn_hover_text_color_shade, content: ss.btn_text, custom_class: 'mx-gutter font-headline', before_icon: '', after_icon: '' %}
            {% endif %}

            {% if ss.alt_btn_url != blank %}
                {% render 'button' element: 'a', type: '', href: ss.alt_btn_url, target: '', border_color: ss.alt_btn_border_color, border_color_shade: ss.alt_btn_border_color_shade, border_width: 'border', bg_color: ss.alt_btn_color, text_color: ss.alt_btn_text_color, text_color_shade: ss.alt_btn_text_color_shade, hover_bg: ss.alt_btn_hover_color, hover_bg_shade: ss.alt_btn_hover_color_shade, hover_border_color: ss.alt_btn_hover_border_color, hover_border_color_shade: ss.alt_btn_border_hover_color_shade, hover_text: ss.alt_btn_hover_text_color, hover_text_shade: ss._alt_btn_hover_text_color_shade content: ss.alt_btn_text, custom_class: 'mx-gutter font-headline', before_icon: '', after_icon: '' %}
            {% endif %}

        </div>

    </div>

    <div
        data-swiper
        data-swiper-settings='{"spaceBetween": 24, "centeredSlides": false, "threshold": "20", "speed": 500, "slidesPerView": "auto", "navigation": { "nextEl": ".spotlight-carousel .swiper-button-next", "prevEl": ".spotlight-carousel .swiper-button-prev" }, "breakpoints": { "1024": { "slidesPerView": "auto", "spaceBetween": 24 }}, "autoplay": false, "draggable": true}'
        class="w-full swiper | lg:w-2/3 lg:pr-gutter-lg">

        <div
            class="swiper-button-next mr-container-gutter !bottom-auto !top-4 !right-0 after:!content-none | lg:mr-container-gutter-lg">

            <i
                class="ri-arrow-right-line text-headline-5 text-secondary-900"></i>

        </div>
        <div class="swiper-button-prev !bottom-auto !top-4 !left-auto !right-container-gutter mr-10 after:!content-none | lg:!right-container-gutter-lg">
            <i
                class="ri-arrow-left-line text-headline-5 text-secondary-900 "></i>

        </div>

        <div
            class="swiper-wrapper mb-7 py-8 pt-16">

            {% for block in section.blocks %}

                {% assign bs = block.settings %}

                {% if bs.cta_link != blank%}

                    <a
                        href="{{ bs.cta_link }}"
                        class="swiper-slide !max-w-[384px] relative {% if bs.shadow_enabled %} shadow-[10px_10px_0px_0px] rounded-2xl {{ bs.shadow_bg_color }}-{{ bs.shadow_bg_color_shade }} {%endif%}">

                        {% if bs.image %}

                            {% render 'responsive-image' with image: bs.image, image_class: 'image h-full w-full object-cover rounded-2xl absolute top-0 left-0', wrapper_class: 'image-wrapper relative w-full pt-[530px]' %}

                        {% endif %}

                        <div
                            class="title | absolute right-4 bottom-4 {{ bs.content_typeface }} {{ bs.content_weight }} {{ bs.content_size }} {{ bs.content_color }}-{{ bs.content_color_shade }}">
                            {{ bs.title }}
                        </div>

                    </a>

                {%else%}
                    <div
                    class="swiper-slide !max-w-[384px] relative {% if bs.shadow_enabled %} shadow-[10px_10px_0px_0px] rounded-2xl {{ bs.shadow_bg_color }}-{{ bs.shadow_bg_color_shade }} {%endif%}">

                    {% if bs.image %}

                        {% render 'responsive-image' with image: bs.image, image_class: 'image h-full w-full object-cover rounded-2xl absolute top-0 left-0', wrapper_class: 'image-wrapper relative w-full pt-[530px]' %}

                    {% endif %}

                    <div
                        class="title | absolute right-4 bottom-4 {{ bs.content_typeface }} {{ bs.content_weight }} {{ bs.content_size }} {{ bs.content_color }}-{{ bs.content_color_shade }}">
                        {{ bs.title }}
                    </div>

                    </div>

                {% endif %}

            {% endfor %}
        </div>

        


    </div>


</section>


