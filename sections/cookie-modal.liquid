                {% endcomment %}

                    <button class="btn | flex-grow py-3 px-button-x rounded-lg	font-headline text-center text-button flex items-center justify-center relative cursor-pointer | lg:text-button-lg mr-gutter w-full lg:w-auto border-tertiary-900 border bg-secondary-900 | text-tertiary-500 | hover:border-secondary-600 | hover:bg-tertiary-900 | hover:text-secondary-900 | transition-all duration-animation-speed" data-cookie-reject>
                        {{ ss.reject }}
                    </button>
                    <button class="btn | flex-grow py-3 px-button-x rounded-lg	font-headline text-center text-button flex items-center justify-center relative cursor-pointer | lg:text-button-lg ml-gutter w-full lg:w-auto border-primary-900 border bg-primary-900 | text-secondary-900 | hover:border-secondary-600 | hover:bg-tertiary-900 | hover:text-secondary-900 | transition-all duration-animation-speed" data-cookie-accept>
                        {{ ss.accept }}
                    </button>

                </div>

            </div>

        </div>

