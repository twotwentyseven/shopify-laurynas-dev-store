        data-add-class="top-0"
        data-remove-class="-top-[101vh]">

        <div data-cookie-modal-inner
            class="modal transition-all duration-500 p-6 fixed right-4 left-4 -bottom-[50rem] rounded-2xl bg-secondary-900 | md:right-6 md:left-auto md:max-w-[400px] "
            data-add-class="bottom-6"
            data-remove-class="-bottom-[50rem]">

            {% comment %}
            <i data-close-cookie-modal class="close-icon ri-close-circle-line | text-tertiary-900 text-headline-2 absolute z-10 right-4 top-4 leading-none active cursor-pointer"></i>
        {% endcomment %}

            <div class="content text-left mx-auto max-w-[35.75rem]">

                {% if ss.title != blank %}
                    <p class="title text-tertiary-900 font-headline text-headline-4 mb-2 mx-auto | lg:text-headline-4-lg">{{ ss.title }}</p>
                {% endif %}

                {% if ss.content != blank %}
                    <div class="mb-5 text-body-large text-tertiary-900">
                        {{ ss.content }}
                    </div>
                {% endif %}

                <div class="flex justify-center">
                    {% comment %}
                {% render 'button' element: 'button', data: 'cookie-accept', border_color: ss.btn_border_color, border_color_shade: ss.btn_border_color_shade, border_width: 'border', bg_color: ss.btn_color, bg_color_shade: ss.btn_color_shade, text_color: ss.btn_text_color, text_color_shade: ss.btn_text_color_shade, hover_bg: ss.btn_hover_color, hover_bg_shade: ss.btn_hover_color_shade, hover_border_color: ss.btn_hover_border_color, hover_border_color_shade: ss.btn_border_hover_color_shade, hover_text: ss.btn_hover_text_color, hover_text_shade: ss.btn_hover_text_color_shade, content: ss.accept, custom_class: 'mx-gutter w-full lg:w-auto', before_icon: '', after_icon: '' %}
