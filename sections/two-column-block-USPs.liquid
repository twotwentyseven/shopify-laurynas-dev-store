{% assign ss = section.settings %}

<section
    class="two-column-usps-block | relative w-full flex flex-wrap px-container-gutter py-16 | lg:items-center lg:p-container-gutter-lg lg:gap-10 | {{ ss.text-align }} {{ ss.bg_color }}-{{ss.bg_color_shade}}">

    <div
        class="column | mb-4 w-full order-2 | lg:basis-2/5 lg:pb-0 lg:order-2">

        {% if ss.title != blank %}
            <h2
                class="title | mb-10 |  {{ ss.title_typeface }} {{ ss.title_weight }} {{ ss.title_color }}-{{ ss.title_color_shade }} {{ ss.title_size }}">
                {{ ss.title }}
            </h2>
        {% endif %}

        {% if ss.subtitle != blank %}
            <div
                class="content | mb-4  | {{ ss.subtitle_typeface }} {{ ss.subtitle_size }} {{ ss.subtitle_weight }} {{ ss.subtitle_color }}-{{ ss.subtitle_color_shade }}">
                {{ ss.subtitle }}
            </div>
        {% endif %}

        <div
            class="btn-wrapper | -mx-gutter flex {{ ss.text-align }}">

            {% if ss.btn_url != blank %}
                {% render 'button' element: 'a', type: '', href: ss.btn_url, target: '', border_color: ss.btn_border_color, border_color_shade: ss.btn_border_color_shade, border_width: 'border', bg_color: ss.btn_color, bg_color_shade: ss.btn_color_shade, text_color: ss.btn_text_color, text_color_shade: ss.btn_text_color_shade, hover_bg: ss.btn_hover_color, hover_bg_shade: ss.btn_hover_color_shade, hover_border_color: ss.btn_hover_border_color, hover_border_color_shade: ss.btn_border_hover_color_shade, hover_text: ss.btn_hover_text_color, hover_text_shade: ss.btn_hover_text_color_shade, content: ss.btn_text, custom_class: 'mx-gutter font-headline', before_icon: '', after_icon: '' %}
            {% endif %}

            {% if ss.alt_btn_url != blank %}
                {% render 'button' element: 'a', type: '', href: ss.alt_btn_url, target: '', border_color: ss.alt_btn_border_color, border_color_shade: ss.alt_btn_border_color_shade, border_width: 'border', bg_color: ss.alt_btn_color, text_color: ss.alt_btn_text_color, text_color_shade: ss.alt_btn_text_color_shade, hover_bg: ss.alt_btn_hover_color, hover_bg_shade: ss.alt_btn_hover_color_shade, hover_border_color: ss.alt_btn_hover_border_color, hover_border_color_shade: ss.alt_btn_border_hover_color_shade, hover_text: ss.alt_btn_hover_text_color, hover_text_shade: ss._alt_btn_hover_text_color_shade content: ss.alt_btn_text, custom_class: 'mx-gutter font-headline', before_icon: '', after_icon: '' %}
            {% endif %}

        </div>

    </div>

    <div
        class="column | {{ ss.image_align_mob }} w-full | lg:{{ ss.image_align }} lg:basis-2/5 flex-grow |  {% if ss.image_align_mob == 'order-1' %}pt-10{% else %}pb-10{% endif %} {% if ss.image_align == 'order-1' %}lg:pl-container-gutter-lg{% else %}lg:pr-container-gutter-lg{% endif %}">

        {% if ss.image != blank %}

            {% render 'responsive-image' with image: ss.image, mobile_image: ss.image_mob, image_class: 'image mx-auto w-full h-full object-contain', wrapper_class: 'image-wrapper w-full' %}

        {% endif %}

    </div>

    <div
        class="usps-wrapper | basis-full order-2 flex flex-col max-w-fit gap-4 my-6 | lg:mx-auto lg:my-0 lg:max-w-full lg:order-3 lg:flex-row lg:gap-10 lg:justify-evenly">
        {% for block in section.blocks %}
            {% assign bs = block.settings %}
            {% if bs.title != blank %}
                <div
                    class="flex items-center gap-2 | ">

                    {% if bs.image != blank %}

                        {% render 'responsive-image' with image: bs.image, image_class: 'image object-contain h-full w-full', wrapper_class: 'image-wrapper w-14 h-14' %}

                    {% endif %}
                    <div
                        class="">
                        {% if bs.title != blank %}
                            <h3
                                class="title |  |  {{ bs.title_typeface }} {{ bs.title_weight }} {{ bs.title_color }}-{{ bs.title_color_shade }} {{ bs.title_size }}">
                                {{ bs.title }}
                            </h3>
                        {% endif %}


                    </div>
                </div>
            {% endif %}
        {% endfor %}

    </div>

</section>


